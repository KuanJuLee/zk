{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "esnext",
      "dom",
      "ScriptHost" // ActiveObject
    ],
    "module": "commonjs",
    "allowJs": false,
    "checkJs": false,
    "outDir": "../build/js",
    "rootDir": "./src/main/resources/web/js",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false, // leave this for js compatible,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "useUnknownInCatchVariables": false,
    "types": [
      "webpack-env",
      "zk"
    ],
    "paths": {
      "@zul/*": [
        "./src/main/resources/web/js/zul/*"
      ]
    }
  },
  "include": [
    "./src/main/resources/web/js"
  ]
}