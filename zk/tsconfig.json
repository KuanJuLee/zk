{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "esnext",
      "dom",
      "ScriptHost" // declare var ActiveXObject: (type: string) => void;
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "allowJs": true,
    "noEmit": true, // type checking only
    "strict": true,
    "allowSyntheticDefaultImports": true,
    //    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": false,
    //    "noImplicitReturns": true,
    //    "noUnusedLocals": true,
    "noImplicitAny": false, // leave this for js compatible,
    "noImplicitOverride": true,
    // "importsNotUsedAsValues": "error", // TODO
    "noUnusedLocals": true,
    // "noUnusedParameters": true, // TODO
    // "exactOptionalPropertyTypes": true, // TODO
    "types": [
      "webpack-env"
    ],
    "paths": {
      "@zk/*": [
        "./src/main/resources/web/js/zk/*"
      ]
    }
  },
  "include": [
    "./src/main/resources/web/js/zk"
  ]
}